{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["eslint:recommended"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "globals": {
        "Vue": "readonly",
        "axios": "readonly",
        "require": "readonly"
    },
    "rules": {
        "indent": ["error", 4],
        "no-unused-vars": "warn",
        "no-undef": "error",
        "semi": ["error", "always"],
        "quotes": ["error", "single", { "avoidEscape": true }],
        "prefer-const": "warn"
    }
}
